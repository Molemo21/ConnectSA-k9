# Database
DATABASE_URL="postgresql://username:password@localhost:5432/connectsa"
DIRECT_URL="postgresql://username:password@localhost:5432/connectsa"

# Authentication
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="7d"
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# Email
FROM_EMAIL="noreply@yourapp.com"
RESEND_API_KEY="your-resend-api-key"

# ============================================================================
# PAYSTACK CONFIGURATION
# ============================================================================
# IMPORTANT: Use TEST keys for development, LIVE keys for production
#
# Development (Local):
#   - Use TEST keys: sk_test_... and pk_test_...
#   - Set PAYSTACK_TEST_MODE=true
#   - Webhook URL: http://localhost:3000/api/webhooks/paystack (or ngrok URL)
#
# Production (Vercel/Hosting):
#   - Use LIVE keys: sk_live_... and pk_live_...
#   - Set PAYSTACK_TEST_MODE=false
#   - Webhook URL: https://yourdomain.com/api/webhooks/paystack
#
# Security:
#   - NEVER commit live keys to git
#   - NEVER use live keys in development
#   - Secret and public keys must match (both test or both live)
# ============================================================================

# Paystack API Keys
# Development: sk_test_... and pk_test_...
# Production: sk_live_... and pk_live_...
PAYSTACK_SECRET_KEY=sk_test_your_test_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key

# Paystack Mode Configuration
PAYSTACK_MODE=test
PAYSTACK_TEST_MODE=true  # Set to false for production with live keys
PAYSTACK_BASE_URL=https://api.paystack.co

# Webhook Configuration
# Development: http://localhost:3000/api/webhooks/paystack (or ngrok URL)
# Production: https://yourdomain.com/api/webhooks/paystack
PAYSTACK_WEBHOOK_URL=http://localhost:3000/api/webhooks/paystack
PAYSTACK_WEBHOOK_SECRET=

# Transfer Configuration
TRANSFER_RETRY_MAX=5
TRANSFER_RETRY_CRON="*/5 * * * *"

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
COOKIE_DOMAIN=localhost
PRISMA_DISABLE_PREPARED_STATEMENTS=false

# Logging
LOG_LEVEL=info

# Push Notifications (VAPID Keys)
# Generate keys using: node scripts/generate-vapid-keys.js
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:support@app.proliinkconnect.co.za"

# Application URL (Public - accessible in browser)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

{
  // GitHub Actions workflow linting configuration
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },
  "yaml.customTags": [
    "!And scalar",
    "!If scalar",
    "!Not scalar",
    "!Equals scalar",
    "!Or scalar",
    "!FindInMap sequence",
    "!Base64 scalar",
    "!Cidr scalar",
    "!Ref scalar",
    "!Sub scalar",
    "!GetAtt scalar",
    "!GetAZs scalar",
    "!ImportValue scalar",
    "!Select sequence",
    "!Split sequence",
    "!Join sequence"
  ],
  // Suppress warnings about secret context access (these are valid in GitHub Actions)
  "yaml.validate": true,
  "yaml.completion": true,
  // Disable specific validation rules that cause false positives
  "yaml.settings": {
    "yaml.schemaStore.enable": true,
    "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json"
  },
  // Ignore specific validation rules for GitHub Actions
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // GitHub Actions extension settings - suppress secret context warnings
  "github-actions.workflows.pinned.workflows": [
    ".github/workflows/deploy-production.yml"
  ],
  // Suppress linter warnings for GitHub Actions secrets (false positives)
  "files.associations": {
    ".github/workflows/*.yml": "yaml"
  },
  // Disable YAML validation for GitHub Actions workflows (secrets cause false positives)
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  // GitHub Actions extension will handle validation better
  "github-actions.workflows.pinned.refresh.enabled": true
}
